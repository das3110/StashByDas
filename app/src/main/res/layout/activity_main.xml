<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="303dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/DarkOliveGreen">
        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/archivo_black"
                android:gravity="left"
                android:text="@string/bienvenido"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:gravity="left"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPresupuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/presupuesto"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:textSize="22dp"
                android:gravity="left"
                android:text="" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:layout_marginLeft="220dp"

            android:backgroundTint="@color/DarkSeaGreen"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/editar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="209dp"
                android:layout_height="193dp"

                app:srcCompat="@drawable/logo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/DarkOliveGreen"
            android:layout_marginBottom="20dp">

        </View>


            <Button
                android:id="@+id/buttonInventario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkSeaGreen"
                android:layout_marginBottom="10dp"
                android:text="@string/inventario" />

            <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comprar"
            android:background="@color/DarkSeaGreen"
            android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tiendas"
                android:background="@color/DarkSeaGreen"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/configuracion"
                android:background="@color/DarkSeaGreen"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cerrarsesion"
                android:background="@color/DarkSeaGreen"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>