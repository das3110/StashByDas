<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleTiendas">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">
        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/DarkOliveGreen">
        </View>

        <TextView
            android:id="@+id/textDetalleNombreTienda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity=""
            android:text="TextView"             />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/DarkOliveGreen">
        </View>
        <TextView
            android:id="@+id/textDetalleDireccionTienda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="TextView"
            android:gravity=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/DarkOliveGreen">
        </View>
        <TextView
            android:id="@+id/textDetalleHorarioTienda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="TextView"
            android:gravity=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/DarkOliveGreen">
        </View>
        <TextView
            android:id="@+id/textDetallePagoTienda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="TextView"
            android:gravity=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/DarkOliveGreen">
        </View>
        <TextView
            android:id="@+id/textDetalleCategoriaTienda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="TextView"
            android:gravity=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/DarkOliveGreen">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonEliminarTienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/DarkSeaGreen"
                android:text="@string/eliminar" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>